{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} | Réinitialisation de votre mot de passe
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('requestResetPassword') }}
{% endblock %}

{% block body %}
    <section class="heading">
        <div class="wrapper">
            <h1>Réinitialisez <br>votre mot de passe</h1>
        </div>
    </section>
    <section class="form-reset-password">
        <div class="wrapper">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <p class="info-message">
                    Introduisez votre adresse mail et nous vous enverrons un nouveau mot de passe.
                </p>
            </div>

            <button class="form-reset-password-btn" type="submit">Nouveau mot de passe</button>
            {{ form_end(requestForm) }}
        </div>
    </section>
{% endblock %}
